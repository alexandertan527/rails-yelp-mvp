<h1><%= @restaurant.name %></h1>

<p><%= @restaurant.address.capitalize %></p>
<p><%= @restaurant.category.capitalize %></p>

<br>
<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
    <li class="list-group-item"><%= review.rating %></li>
  <% end %>
</ul>
<br>


<%= link_to "Leave a review", new_restaurant_review_path(@restaurant) %>
<br>
<%= link_to "Edit this restaurant", edit_restaurant_path %>
<br>
<%= link_to "Delete this restaurant", restaurant_path(@restaurant),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
<br>
<%= link_to "Back to restaurants", restaurants_path %>
